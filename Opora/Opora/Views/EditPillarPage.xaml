<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Opora.Views.EditPillarPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Сохранить" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Марка опоры" FontSize="Medium" />
            <Entry Text="{Binding Name}" FontSize="Small" />
            <Label Text="Высота опоры, м" FontSize="Medium" />
            <Editor Text="{Binding Height}" FontSize="Small" Margin="0" />
            <Label Text="Конусность опоры, см" FontSize="Medium" />
            <Editor Text="{Binding Taper}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>